        <h1>Table</h1>
        <table>
          <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Shipping Street</th>
            <th>Shipping City</th>
            <th>Shipping State</th>
            <th>Shipping Zip Code</th>
            <th>Delete</th>
          </tr>

          {{#each results}}
          <tr>
            <td>{{orderID}}</td>
            <td>{{customerID}}</td>
            <td>{{shipStreet}}</td>
            <td>{{shipCity}}</td>
            <td>{{shipState}}</td>
            <td>{{shipZip}}</td>
            <td><button onclick="deleteOrders({{orderID}})">Delete</button></td>
          </tr>
          {{/each}}
        </table>
