      <h1>Orders</h1>
        <form id ="addOrder" action="/orders" method="post">
            <p>Customer ID</p>
            <input type="text" name = "customerID">
            <p>shipStreet</p>
            <input type="text" name = "shipStreet">
            <p>shipCity</p>
            <input type="text" name = "shipCity">
            <p>shipState</p>
            <input type="text" name = "shipState">
            <p>shipZip</p>
